<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dtwal.photogallery.MainActivity">

    <Button
        android:id="@+id/goButton"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:layout_marginBottom="380dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/GoButton"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchKeyword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchKeyword"
        android:layout_width="279dp"
        android:layout_height="44dp"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/SearchKeyword"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/goButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchKeyword"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/prevButton"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="145dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/nextButton"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nextButton"
        app:srcCompat="@drawable/prev" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="77dp"
        android:layout_height="43dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prevButton"
        app:layout_constraintTop_toBottomOf="@+id/goButton"
        app:srcCompat="@drawable/next" />
</android.support.constraint.ConstraintLayout>
